.note {
  min-height: 20px;
  margin: 10px;
  padding: 5px 10px 5px 60px;
  border: 1px dashed #8d4c1b;
  border-radius: 5px;
  background: url(<%=asset_path "info.png"%>) 5px center no-repeat #fff2da;
  color: #8d4c1b;
}

p {
  text-align: justify;
}

a {
  color: white;
  font-weight: bold;
}

.quote {
  margin: 1px 0;
  display: block;
  font-style: italic;
  padding-left: 10px;
  color: #afc0b1;
}
.quote:before, .quote:after {
  font-family: Arial;
  font-size: 18pt;
  color: #c4d1c6;
  text-align: center;
  padding: 0 10px;
}
.quote:before { content: open-quote; }
.quote:after { content: close-quote; }

h1.shop {
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  perspective: 1000;
  padding: 0 20px;
  position: absolute;
  top: 45px;
}
h1.shop span {
  -webkit-transform: rotateX(45deg);
  -moz-transform: rotateX(45deg);
  transform: rotateX(45deg);
  display: block;
  line-height: 100px;
  width: 900px;
  text-align: center;
  font-size:60px;
  color: white;
}

.showplace .block-content b {
  padding-bottom: 10px;
}
.showplace .block-content div {
  padding-left: 10px;
}


